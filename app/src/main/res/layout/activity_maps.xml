<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEFBFB"
    tools:context=".MapsActivity" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/shoppingmall_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#FEFBFB"
                android:text="마트"
                app:srcCompat="@drawable/map_shoppingmall_btn" />

            <ImageButton
                android:id="@+id/cafe_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#FEFBFB"
                android:text="카페"
                app:srcCompat="@drawable/map_cafe_btn" />

            <ImageButton
                android:id="@+id/restaurant_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#FEFBFB"
                android:text="식당"
                app:srcCompat="@drawable/map_restaurant_btn" />

            <ImageButton
                android:id="@+id/btn_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#FEFBFB"
                android:text="미용실"
                app:srcCompat="@drawable/map_hairshop_btn" />

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#FEFBFB"
                android:text="호텔/숙소"
                app:srcCompat="@drawable/map_hotel_btn" />

        </LinearLayout>

    </HorizontalScrollView>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context = ".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>


</LinearLayout>