<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_margin="20sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/community_background"
    android:orientation="vertical"
    android:gravity="center"
>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="110dp"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="#FEFBFB"
        app:srcCompat="@drawable/imgimg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소"
            android:textSize="6.5pt"
            android:textStyle="bold"
            android:textColor="#F7C45F" />
        <EditText
            android:id="@+id/place"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="6pt"
            android:hint="다녀온 곳을 입력해주세요" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:textStyle="bold"
            android:textColor="#F7C45F"
            android:text="소개"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/explain"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="6pt"
            android:hint="다녀온 곳의 추억을 적어보세요" />
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위도"
        android:textColor="#F7C45F"
        android:textSize="6.5pt"
        android:textStyle="bold" />
    <EditText
                android:id="@+id/longitude"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:hint="위도" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경도"
                android:textSize="6.5pt"
                android:textStyle="bold"
                android:textColor="#F7C45F" />
            <EditText
                android:id="@+id/latitude"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:hint="걍도" />
    </LinearLayout>

    </LinearLayout>



            <ImageButton
                android:id="@+id/btn_save"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:text="저장"
                android:scaleType="fitCenter"
                android:background="#FEFBFB"
                app:srcCompat="@drawable/profile_send_btn" />



</LinearLayout>




