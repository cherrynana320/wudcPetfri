<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEFBFB"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >


    <ImageButton
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="#FEFBFB"
        android:text="Market"
        app:srcCompat="@drawable/main_shoppingmall_btn" />

    <ImageButton
        android:id="@+id/btn_cafe"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="#FEFBFB"
        android:text="Cafe"
        app:srcCompat="@drawable/main_cafe_btn"/>

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="#FEFBFB"
        android:text="Restaurant"
        app:srcCompat="@drawable/main_restaurant_btn"/>


    <ImageButton
        android:id="@+id/button5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="#FEFBFB"
        android:text="Hair"
        app:srcCompat="@drawable/main_hairshop_btn"/>

    <ImageButton
        android:id="@+id/button6"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="#FEFBFB"
        android:text="Hotel"
        app:srcCompat="@drawable/main_hotel_btn"/>

</LinearLayout>

</LinearLayout>